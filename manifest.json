{
    "manifest_version": 3,
    "name": "简易日历",
    "version": "1.0",
    "description": "一个简单的日历插件，可以记录每日事项",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "permissions": ["storage"],
    "background": {
      "service_worker": "background.js"
    }
  }